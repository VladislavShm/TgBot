<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1649396278804-1" author="giraffe">
        <createTable tableName="purchase">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_purchase"/>
            </column>
            <column name="buyer_wallet" type="VARCHAR(255)"/>
            <column name="datetime" type="INT"/>
            <column name="amount" type="VARCHAR(255)"/>
            <column name="transaction_id" type="VARCHAR(255)"/>
            <column name="username" type="VARCHAR(255)"/>
            <column name="approved" type="BOOLEAN"/>
        </createTable>
    </changeSet>

</databaseChangeLog>