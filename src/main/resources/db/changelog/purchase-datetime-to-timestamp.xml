<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1649523708477-1" author="giraffe">
        <addColumn tableName="purchase">
            <column name="datetimeNew" type="DATETIME"/>
        </addColumn>
    </changeSet>
    <changeSet id="1649523708477-2" author="giraffe">
        <sql>
            update purchase p1
            set datetimeNew = (
                select TO_TIMESTAMP(datetime) at time zone 'utc'
                from purchase p2
                where p2.id = p1.id
            )
        </sql>
    </changeSet>
    <changeSet id="1649523708477-3" author="giraffe">
        <dropColumn columnName="datetime" tableName="purchase"/>
    </changeSet>
    <changeSet id="1649523708477-4" author="giraffe">
        <renameColumn oldColumnName="datetimeNew" newColumnName="datetime" tableName="purchase"/>
    </changeSet>

</databaseChangeLog>